<UserControl x:Class="SelinaTimeLine.Controls.TimeLineSlider"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SelinaTimeLine.Controls"
             xmlns:converters="clr-namespace:SelinaTimeLine.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             Name="_self">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Styles/TimelineSliderStyle.xaml" />
                <ResourceDictionary Source="../Styles/RangeSelectionSliderStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="66"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="50"/>
        </Grid.ColumnDefinitions>

        <Slider Name="TimeLine"
                Style="{StaticResource MainSlider}"
                Minimum="0" Background="Black"
                Maximum="{Binding MaxValue, ElementName=_self}"
                Value="{Binding CurrentValue, UpdateSourceTrigger=PropertyChanged, ElementName=_self}"
                TickPlacement="BottomRight" 
                TickFrequency="5" 
                AutoToolTipPlacement="TopLeft"
                VerticalAlignment="Center"
                AutoToolTipPrecision="3"
                IsMoveToPointEnabled="True"
                IsSelectionRangeEnabled="True"
                SelectionStart="10"
                SelectionEnd="50"
                />
        
        <!--<local:MainSlider Name="TimeLine" Minimum="0"
                          Maximum="{Binding MaxValue, ElementName=_self}" />-->
        
        <local:RangeSelectionSlider Grid.Column="0" />
        <local:RangeSelectionSlider Grid.Column="0" />
        
        <Button Grid.Column="2" Visibility="{Binding IsLiveStreaming, ElementName=_self, Converter={converters:BoolToVisibilityConverter}}" Width="45">
            <StackPanel Orientation="Horizontal">
                <Rectangle RadiusX="4" RadiusY="4" Height="5" Width="5" Fill="Red" 
                           VerticalAlignment="Center"
                           Visibility="{Binding IsLiveRightNow, ElementName=_self, Converter={converters:BoolToVisibilityConverter}}"
                           />
                <Rectangle RadiusX="4" RadiusY="4" Height="5" Width="5" Fill="Gray" 
                           VerticalAlignment="Center"
                           Visibility="{Binding IsLiveRightNow, ElementName=_self, Converter={converters:InverseBoolToVisibilityConverter}}"
                />
                <TextBlock Text="Live" Margin="3 0" />
            </StackPanel>
        </Button>
        <TextBlock Grid.Column="2" Text="{Binding CurrentTimeSpan,
                        StringFormat=hh\\:mm\\:ss\\.fff, ElementName=_self}" 
                   Visibility="{Binding IsLiveStreaming, ElementName=_self, Converter={converters:InverseBoolToVisibilityConverter}}"/>
        <TextBlock Grid.Column="3" Text="/" 
                   Visibility="{Binding IsLiveStreaming, ElementName=_self, Converter={converters:InverseBoolToVisibilityConverter}}"/>
        <TextBlock Grid.Column="4" Text="{Binding MaxTimeSpan, ElementName=_self}" 
                   Visibility="{Binding IsLiveStreaming, ElementName=_self, Converter={converters:InverseBoolToVisibilityConverter}}"/>
    </Grid>
</UserControl>
