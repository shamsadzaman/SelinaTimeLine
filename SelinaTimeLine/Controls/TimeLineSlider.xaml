<UserControl x:Class="SelinaTimeLine.Controls.TimeLineSlider"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SelinaTimeLine.Controls"
             xmlns:converters="clr-namespace:SelinaTimeLine.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             Name="_self">
    <Grid>
        <Slider Name="TimeLine" Minimum="0" Background="Black"
                Maximum="{Binding MaxValue, ElementName=_self}"
                Value="{Binding CurrentValue, UpdateSourceTrigger=PropertyChanged, ElementName=_self}"
                TickPlacement="BottomRight" 
                TickFrequency="5" 
                AutoToolTipPlacement="TopLeft"
                VerticalAlignment="Center"
                AutoToolTipPrecision="3"
                IsMoveToPointEnabled="True"
                IsSelectionRangeEnabled="True"
                    
        />
        </Grid>
</UserControl>
