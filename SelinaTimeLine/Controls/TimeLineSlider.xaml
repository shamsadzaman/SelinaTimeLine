<UserControl x:Class="SelinaTimeLine.Controls.TimeLineSlider"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SelinaTimeLine.Controls"
             xmlns:converters="clr-namespace:SelinaTimeLine.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             Name="_self">
    <UserControl.Resources>
        <Style x:Key="DecreaseRepeatButton" TargetType="{x:Type RepeatButton}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type RepeatButton}">
                        <Rectangle Height="5" Fill="Green" />
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="IncreaseRepeatButton" TargetType="{x:Type RepeatButton}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type RepeatButton}">
                        <Rectangle Height="5" Fill="Gray" />
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <ControlTemplate x:Key="MainSliderTemplate" TargetType="{x:Type Slider}">
            <Grid>
                <Canvas VerticalAlignment="Center">
                    <Border x:Name="PART_SelectionRange" HorizontalAlignment="Left"
                            Height="5"
                            Background="Blue"></Border>
                </Canvas>
                <Track x:Name="PART_Track">
                    <Track.DecreaseRepeatButton>
                        <RepeatButton Command="{x:Static Slider.DecreaseLarge}"
                                  Style="{StaticResource DecreaseRepeatButton}"/>
                    </Track.DecreaseRepeatButton>
                    <Track.IncreaseRepeatButton>
                        <RepeatButton Command="{x:Static Slider.IncreaseLarge}"
                                  Style="{StaticResource IncreaseRepeatButton}"/>
                    </Track.IncreaseRepeatButton>
                    <Track.Thumb>
                        <Thumb x:Name="Thumb">
                            <Thumb.Template>
                                <ControlTemplate TargetType="Thumb">
                                    <Ellipse Fill="Orange" 
                                         Stroke="Black"
                                         StrokeThickness="1"
                                         Width="15"
                                         Height="15"
                                         SnapsToDevicePixels="True"/>
                                </ControlTemplate>
                            </Thumb.Template>
                        </Thumb>
                    </Track.Thumb>
                </Track>
            </Grid>
        </ControlTemplate>
    </UserControl.Resources>
    <Grid>
        <Border Name="RangeBorder"
                BorderThickness="0,1,0,0"
                BorderBrush="Gray"
                VerticalAlignment="Center"
                Height="2"
                Margin="5,0,5,0"
                />
        <Slider Name="TimeLine" Minimum="0" Background="Black"
                Maximum="{Binding MaxValue, ElementName=_self}"
                Value="{Binding CurrentValue, UpdateSourceTrigger=PropertyChanged, ElementName=_self}"
                TickPlacement="BottomRight" 
                TickFrequency="5" 
                AutoToolTipPlacement="TopLeft"
                VerticalAlignment="Center"
                AutoToolTipPrecision="3"
                IsMoveToPointEnabled="True"
                IsSelectionRangeEnabled="True"
                Template="{StaticResource MainSliderTemplate}"
                SelectionStart="{Binding ElementName=_self, Path=SelectionStart}"
                SelectionEnd="{Binding ElementName=_self, Path=SelectionEnd}"
        />
        </Grid>
</UserControl>
