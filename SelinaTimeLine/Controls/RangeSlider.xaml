<UserControl x:Class="SelinaTimeLine.Controls.RangeSlider"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SelinaTimeLine.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             Name="root">
    <UserControl.Resources>
        <ControlTemplate x:Key="SimpleSliderTemplate" TargetType="{x:Type Slider}">
            <Grid>
                <Track x:Name="PART_Track" Grid.Row="1">
                    <Track.Thumb>
                        <Thumb x:Name="Thumb">
                            <Thumb.Template>
                                <ControlTemplate TargetType="Thumb">
                                    <Rectangle Fill="GreenYellow"
                                           Stroke="Black"
                                           StrokeThickness="1"
                                           Width="10"
                                           Height="18"
                                           SnapsToDevicePixels="True"/>
                                </ControlTemplate>
                            </Thumb.Template>
                        </Thumb>
                    </Track.Thumb>
                </Track>
            </Grid>
        </ControlTemplate>
    </UserControl.Resources>
    <Grid VerticalAlignment="Top">
        <!--<Border Name="RangeBorder"
                BorderThickness="0,1,0,0"
                BorderBrush="Red"
                VerticalAlignment="Center"
                Height="2"
                Margin="5,0,5,0"
                Opacity=".8"/>-->
        
        <!--<Rectangle Name="RangeBorder"
                   Fill="Aqua"
                   Opacity=".2"
                   Height="5"/>-->

        <Slider x:Name="LowerSlider"
                Minimum="{Binding ElementName=root, Path=Minimum}"
                Maximum="{Binding ElementName=root, Path=Maximum}"
                Value="{Binding ElementName=root, Path=LowerValue, Mode=TwoWay}"
                Template="{StaticResource SimpleSliderTemplate}"
                Margin="0,0,10,0"
                AutoToolTipPlacement="TopLeft"/>
        <Slider x:Name="UpperSlider"
                Minimum="{Binding ElementName=root, Path=Minimum}"
                Maximum="{Binding ElementName=root, Path=Maximum}"
                Value="{Binding ElementName=root, Path=UpperValue, Mode=TwoWay}"
                Template="{StaticResource SimpleSliderTemplate}"
                Margin="10,0,0,0"
                AutoToolTipPlacement="TopLeft"/>
    </Grid>
</UserControl>
